{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.autototem": {
			"states": {
				"autototem": {
					"transitions": [{
						"totem": "query.get_equipped_item_name('off_hand') == 'totem_of_undying'"
					}]
				},
				"totem": {
					"on_entry": [
						"/scoreboard objectives add autototemvl dummy",
						"/execute @s[tag=moving,tag=ground] ~~~ tellraw @a[tag=notify] {\"rawtext\":[{\"text\":\"§r§6[§aScythe§6]§r \"},{\"selector\":\"@s\"},{\"text\":\" §1has failed §7(Combat) §4AutoTotem/A VL= \"},{\"score\":{\"name\":\"@s\",\"objective\":\"autototemvl\"}}]}",
						"/scoreboard players add @s[tag=moving,tag=ground] autototemvl 1",
						"/execute @s[tag=right] ~~~ tellraw @a[tag=notify] {\"rawtext\":[{\"text\":\"§r§6[§aScythe§6]§r \"},{\"selector\":\"@s\"},{\"text\":\" §1has failed §7(Combat) §4AutoTotem/B1 VL= \"},{\"score\":{\"name\":\"@s\",\"objective\":\"autototemvl\"}}]}",
						"/scoreboard players add @s[tag=right] autototemvl 1",
						"/execute @s[tag=left] ~~~ tellraw @a[tag=notify] {\"rawtext\":[{\"text\":\"§r§6[§aScythe§6]§r \"},{\"selector\":\"@s\"},{\"text\":\" §1has failed §7(Combat) §4AutoTotem/B2 VL= \"},{\"score\":{\"name\":\"@s\",\"objective\":\"autototemvl\"}}]}",
						"/scoreboard players add @s[tag=left] autototemvl 1",
						"/execute @s[tag=sneak] ~~~ tellraw @a[tag=notify] {\"rawtext\":[{\"text\":\"§r§6[§aScythe§6]§r \"},{\"selector\":\"@s\"},{\"text\":\" §1has failed §7(Combat) §4AutoTotem/C VL= \"},{\"score\":{\"name\":\"@s\",\"objective\":\"autototemvl\"}}]}",
						"/scoreboard players add @s[tag=sneak] autototemvl 1"
					],
					"transitions": [{
						"autototem": "query.get_equipped_item_name('off_hand') != 'totem_of_undying'"
					}]
				}
			}
		},
		"controller.animation.sprint": {
			"states": {
				"default": {
					"transitions": [{
						"sprint": "query.is_sprinting"
					}],
					"on_entry": [
						"/tag @s remove sprint"
					]
				},
				"sprint": {
					"transitions": [{
						"default": "!query.is_sprinting"
					}],
					"on_entry": [
						"/tag @s add sprint"
					]
				}
			}
		},
		"controller.animation.noswing": {
			"states": {
				"default": {
					"transitions": [{
						"noswing": "query.skin_id == 1"
					}],
					"on_entry": [
//					"/execute @s[tag=!left,tag=attack] ~~~ function checks/alerts/noswing",
					"/tag @s remove attack",
					"@s scythe:reset"
					]
				},
				"noswing": {
					"transitions": [{
						"default": "query.skin_id != 1"
					}],
					"on_entry": [
						"/tag @s add attack",
					 	"@s scythe:reset"
					]
				}
			}
		}
	}
}
